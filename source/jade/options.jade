html
  head
    link(rel='stylesheet',type='text/css',href='../lib/bootstrap.css')
    link(rel='stylesheet',type='text/css',href='options.css')
    script(src='../lib/jquery.js')
    script(src='../lib/underscore.js')
    script(src='../lib/backbone.js')
    script(src='common.js')
    script(src='options.js')
  body
    .navbar
      .navbar-inner
        .container
          a.brand(href='#') Qiita Notifications
    .container
      section
        .page-header
          h1 Desktop Notification
        .row
          .span8
            form.form-horizontal
              fieldset
                .control-group
                  label.control-label(for='notifyTime') Notifing Time
                  .controls
                    input#notifyTime(type='number',size='2',min='0')
                    .help-inline sec
                .control-group
                  label.control-label(for='notifyNotifications') Notifications
                  .controls
                    input#notifyNotifications(type='checkbox')
                    \ Enable
                .control-group
                  label.control-label(for='notifyFollowing') Following
                  .controls
                    input#notifyFollowing(type='checkbox')
                    \ Enable
                .control-group
                  label.control-label(for='notifyAllPosts') All Posts
                  .controls
                    input#notifyAllPosts(type='checkbox')
                    \ Enable
          .span4
