{
  "name": "qiita-notifications",
  "version": "1.0.1",
  "manifest_version": 2,

  "description": "Keep up with Qiita anywhere on the web.",
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png"
  },
  "default_locale": "en",

  "browser_action": {
    "default_icon": "images/19.png",
    "default_title": "Qiita",
    "default_popup": "build/popup.html"
  },

  "background": {
    "scripts": [
      "lib/jquery.js",
      "lib/underscore.js",
      "lib/backbone.js",
      "build/common.js",
      "build/models.js",
      "build/background.js",
      "build/ga.js"
    ]
  },

  "options_page": "build/options.html",
  "permissions": [
    "chrome.i18n.getMessage",
    "notifications",
    "https://qiita.com/",
    "http://qiita.com/"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

  "dependencies": {
    "jade": "",
    "stylus": ""
  }
}
